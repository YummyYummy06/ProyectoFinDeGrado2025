generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String
  email      String       @unique
  password   String
  Taquilla   Taquilla?
  User_Clase User_Clase[]
}

model Clase {
  id         String       @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String
  date       DateTime     @db.Date
  startTime  DateTime     @db.Time(6)
  endTime    DateTime     @db.Time(6)
  aforo      Int?         @default(10) @db.SmallInt
  User_Clase User_Clase[]
}

model User_Clase {
  id_User   String   @db.Uuid
  id_Clase  String   @db.Uuid
  time      DateTime @db.Timestamp(6)
  email     String
  className String
  Clase     Clase    @relation(fields: [id_Clase], references: [id], onDelete: NoAction, onUpdate: NoAction)
  User      User     @relation(fields: [id_User], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@id([id_User, id_Clase])
}

model Taquilla {
  id      Int     @id @unique @default(autoincrement()) @db.SmallInt
  Ocupada Boolean @default(false)
  email   String? @unique
  User    User?   @relation(fields: [email], references: [email])
}
